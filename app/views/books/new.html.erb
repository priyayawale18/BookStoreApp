 <div class="container container-margin">
 	<h2><center>Add Book</center></h2>
   <div class="row">
   		<div class="col-md-4"></div>

   		<div class="col-md-4">
   		
   				<div class="card">
   				   <div class="card-body">
   				   	 <%= form_with model:@book do |book| %>
                     	<%= book.label :book_title  %>
	                  	<%= book.text_field :book_title, class: "form-control",autocomplete: "off" %><br>
	                  	<div>
	               	      <%= book.label :Authors %><br>
                        <%= book.collection_select(:author_ids, Author.all, :id, :first_name,
                        { prompt: "Make your selection from the list below (can be empty)"}, { multiple: true, class: "custom-select form-control" }) %><br>
	                    </div>
	                    <%= book.submit class: "btn btn-success" %>
	              

	               
                <% end %>
   				   </div>
	              
   
               
   				</div>


        </div>
   		</div>

        <div class="col-md-4"></div>
   </div>	
</div>	