<div class="container container-margin">

	<div class="row">
	  <div class="col-md-3"></div>

		<div class="col-md-6">
		  <h2 >Book Details</h2><hr>
		  <div class="card">
		  	 <div class="card-body">
		  	 	<div>
		  	 	  Book Name: <%= @book.book_title %><br>	
                </div>
                <div >
                <p>Authors Name:
                  <% if @book.authors.any? %>
                      <div class="mt-2"><%= render @book.authors %>
                      </div> 
                  <% end %>
                 </p> 
                </div><br>
                <div>
              		<%= link_to 'Edit', edit_book_path(@book) , class: "btn btn-outline-info" %> &nbsp
              		<%= link_to ' Cancel & Return to Book list', books_path, class: "btn btn-outline-danger" %>

              		
              	</div>	
		  	 	
		  	 </div>
		  </div>
        </div>
	</div>

	<div class="col-md-3"></div>
</div>

	
