 <div class="container container-margin">
  
   <div class="row">
      <div class="col-md-3"></div>

      <div class="col-md-6">
          <h2><center>Edit Author Details</center></h2><hr><br>
          <div class="card">

             <div class="card-body">
               <%= form_with model:@author do |author| %>
                      <div>
                         <%= author.label :first_name  %>
                         <%= author.text_field :first_name, class: "form-control",autocomplete: "off" %><br>
                      </div>
                       <div>
                         <%= author.label :last_name  %>
                         <%= author.text_field :last_name, class: "form-control",autocomplete: "off" %><br>
                      </div>
                       <div>
                         <%= author.label :date_of_birth  %>
                         <%= author.date_field :date_of_birth, class: "form-control",autocomplete: "off" %><br>
                      </div>
                      <div>
                        <%= author.label :Books %><br>
                        <%= author.collection_select(:book_ids, Book.all, :id, :book_title,
                        { prompt: "Make your selection from the list below (can be empty)"}, { multiple: true, class: "custom-select form-control" }) %><br>
                      </div>
                      <br>

                      <%= author.submit class: "btn btn-success" %>
                      <%= link_to ' Cancel & Return to Authors list', authors_path, class: "btn btn-danger" %>
                 <% end %>

             </div>
                
   
               
          </div>


        </div>
      </div>

        <div class="col-md-3"></div>
   </div> 
</div>  