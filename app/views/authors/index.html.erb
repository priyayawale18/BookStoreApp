      <div class="col-4 mt-4">
        <div class="card text-center shadow mb-5 bg-white rounded">
          <div class="card-body">
            
        
             Author Name: <p><%= author.first_name %> <%= author.last_name %></p>
              <p></p>
             Date of Birth: <p><%= author.date_of_birth %></p>
              
                   

          </div>
        </div>
      </div>
    </div>
  <% end %>

</div>
